{
  "manifest_version": 3,
  "name": "Octobox",
  "version": "1.0.0",
  "description": "Integrate Octobox directly into your GitHub workflow",
  "author": {
    "name": "Andrew Nesbitt",
    "url": "https://octobox.io"
  },
  "icons": {
    "48": "icons/octobox-48.png",
    "96": "icons/octobox-96.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*", "*://octobox.io/*"],
      "js": ["octobox.js"],
      "css": ["octobox.css"]
    }
  ],
  "host_permissions": [
    "*://octobox.io/*"
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["*://*.github.com/*", "*://octobox.io/*"]
  }]
}