{
  "manifest_version": 2,
  "name": "Octobox",
  "version": "0.0.3",

  "description": "Integrate Octobox directly into your GitHub workflow",
  "developer": {
    "name": "Andrew Nesbitt",
    "url": "https://octobox.io"
  },
  "icons": {
    "48": "icons/octobox-48.png",
    "96": "icons/octobox-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.github.com/*", "*://octobox.io/*"],
      "js": ["octobox.js"],
      "css": ["octobox.css"]
    }
  ],

  "permissions": [
    "*://octobox.io/*",
    "storage"
  ],

  "web_accessible_resources": [
      "icons/*"
    ]
}
